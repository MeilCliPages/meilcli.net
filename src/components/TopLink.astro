---
interface Props {
    url: string;
    title: string;
    description: string;
    icon: "Twitter" | "GitHub" | "Blog" | "Qiita" | "Photo";
}

const { url, title, description } = Astro.props;
let iconClass = "fa6-solid--book"; // Blog
switch (Astro.props.icon) {
    case "Twitter":
        iconClass = "fa6-brands--x-twitter";
        break;
    case "GitHub":
        iconClass = "fa6-brands--github";
        break;
    case "Qiita":
        iconClass = "fa6-solid--q";
        break;
    case "Photo":
        iconClass = "fa6-solid--images";
        break;
}
---

<div class="group relative px-8 py-4">
    <div class="absolute inset-0 rounded-2xl group-hover:bg-slate-50/70 dark:group-hover:bg-slate-800/70"></div>
    <div class="relative">
        <div class="flex">
            <div class="flex-initial">
                <p class="flex h-full items-center pr-4 text-4xl">
                    <span class:list={["iconify", iconClass]}></span>
                </p>
            </div>
            <div class="flex-1">
                <h3 class="text-xl text-black dark:text-white">{title}</h3>
                <p class="mt-1 line-clamp-3 text-base text-gray-500 dark:text-gray-400">{description}</p>
            </div>
            <div class="flex-initial">
                <p class="flex h-full items-center pr-4 text-4xl">
                    <span class="iconify relative fa6-solid--angle-right"></span>
                </p>
            </div>
        </div>
    </div>
    <a href={url} class="hover:no-underline" target="_blank">
        <span class="absolute inset-0 rounded-2xl"></span>
        <span class="relative">
            <span class="sr-only">Navigate to {title}</span>
        </span>
    </a>
</div>
